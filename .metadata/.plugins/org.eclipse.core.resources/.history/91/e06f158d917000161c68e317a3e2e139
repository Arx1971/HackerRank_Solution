package userDaemonThread;

public class Main {

	public static void main(String [] args){
		
		if(args.length == 0)
			new Daemonthread().start();
		else {
			
			Daemonthread dt = new Daemonthread();
			dt.start();
			dt.setDaemon(true);
			
		}
		try {
			
			Thread.sleep(1000);
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
	}
	
}
